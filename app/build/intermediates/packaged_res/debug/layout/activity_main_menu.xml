<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:id="@+id/main_menu_root"
    tools:context=".ui.MainMenuActivity">

    <!-- Background Gradient -->
    <View
        android:id="@+id/background_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Particle Effects -->
    <FrameLayout
        android:id="@+id/particle_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/particle_effect_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3" />

    </FrameLayout>

    <!-- Main Menu Container -->
    <ScrollView
        android:id="@+id/menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo/Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="48dp">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enhanced Agar"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/subtitle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versión Mejorada"
                    android:textSize="18sp"
                    android:textColor="#E0E0E0"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>

            <!-- Username Configuration -->
            <LinearLayout
                android:id="@+id/username_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤 Nombre de Usuario"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/username_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Ingresa tu nombre"
                        android:textColor="@android:color/white"
                        android:textColorHint="#B0B0B0"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:maxLength="20"
                        android:singleLine="true" />

                    <Button
                        android:id="@+id/save_username_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="✓"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_primary"
                        android:layout_marginStart="8dp"
                        android:minWidth="48dp"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/random_username_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="🎲"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_secondary"
                        android:layout_marginStart="8dp"
                        android:minWidth="48dp"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Game Mode Selection -->
            <LinearLayout
                android:id="@+id/mode_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎮 Modo de Juego"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <ImageButton
                        android:id="@+id/mode_prev_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/button_circle"
                        android:src="@android:drawable/ic_media_previous"
                        android:tint="@android:color/white"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/selected_mode_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🏆 Clásico\nTradicional Agar.io\nCrece y domina"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:lineSpacingExtra="4dp"
                        android:padding="16dp" />

                    <ImageButton
                        android:id="@+id/mode_next_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/button_circle"
                        android:src="@android:drawable/ic_media_next"
                        android:tint="@android:color/white"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Role Selection -->
            <LinearLayout
                android:id="@+id/role_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚔️ Rol de Personaje"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/role_prev_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/button_circle"
                        android:src="@android:drawable/ic_media_previous"
                        android:tint="@android:color/white"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/selected_role_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🛡️ Tanque\nAlto HP y defensa\nIdeal para protección"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:lineSpacingExtra="4dp"
                        android:padding="16dp" />

                    <ImageButton
                        android:id="@+id/role_next_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/button_circle"
                        android:src="@android:drawable/ic_media_next"
                        android:tint="@android:color/white"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Main Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/play_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🎮 JUGAR AHORA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_play"
                    android:layout_marginBottom="16dp"
                    android:elevation="12dp"
                    android:stateListAnimator="@animator/button_press_animator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/settings_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="⚙️"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_secondary"
                        android:layout_marginEnd="8dp"
                        android:elevation="6dp" />

                    <Button
                        android:id="@+id/profile_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="👤"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_secondary"
                        android:layout_marginHorizontal="8dp"
                        android:elevation="6dp" />

                    <Button
                        android:id="@+id/scores_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="🏆"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_secondary"
                        android:layout_marginStart="8dp"
                        android:elevation="6dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/credits_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="📜 Créditos"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_minor"
                        android:layout_marginEnd="8dp"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/quit_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="❌ Salir"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_danger"
                        android:layout_marginStart="8dp"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Version Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0 Enhanced Edition"
                android:textSize="12sp"
                android:textColor="#B0B0B0"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>